            @Html.DisplayFor(modelItem => item.altEgo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.primary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.secondary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.catchphrase)
        </td>
